<html>
    <head>
        <title>Cascade API Exploer</title>

        <style type="text/css">
            .jsonPayload {
                width: 80%;
                height: 30%;
            }
        </style>

        <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js"></script>
        <script type="text/javascript">
            $(function() {
                $("#executeButton").click(function() {
                    $.ajax({
                        url: "/api/cascade",
                        type: "POST",
                        data: $("#requestJSON").val(),
                        contentType: "application/json",
                        dataType: "json",
                        complete: function(xhrReq, xhrStatus) {
                            $("#responseJSON").text(xhrReq.responseText);
                        }
                    });
                });
            });
        </script>
    </head>

    <body>
        <div>
            <textarea class="jsonPayload" id="requestJSON">{
    "method": "ListFolders",
    "params": [{}],
    "id": "12345"
}</textarea>
            <button id="executeButton">click me</button>
        </div>

        <div>
            <pre id="responseJSON"/>
        </div>
    </body>
</html>

